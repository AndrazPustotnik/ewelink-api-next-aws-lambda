{
  "compilerOptions": {
    "target": "es2018",
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2018"],
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "./",
    "declaration": true, // 是否生成声明文件
    "typeRoots": [
      "./node_modules/@types",
      "./src/types/"
    ]
  },
  "include": ["./src/*","./test/*"],

}